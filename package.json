{
  "name": "hexo-fs",
  "version": "5.0.0",
  "description": "File system module for Hexo.",
  "type": "module",
  "main": "./dist/fs.js",
  "scripts": {
    "prepublish ": "npm install && npm run clean && npm run build",
    "build-cjs": "tsc -p tsconfig.cjs.json",
    "build-esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build-cjs && npm run build-esm",
    "clean": "npx --yes rimraf dist tmp && npm run build",
    "eslint": "eslint .",
    "pretest": "npm run build",
    "test": "mocha --loader=ts-node/esm test/index.ts",
    "test-cov": "c8 --reporter=lcovonly npm run test"
  },
  "files": [
    "dist/**"
  ],
  "types": "./dist/fs.d.ts",
  "repository": "hexojs/hexo-fs",
  "homepage": "https://hexo.io/",
  "keywords": [
    "file",
    "file system",
    "fs",
    "hexo"
  ],
  "author": "Tommy Chen <tommy351@gmail.com> (https://zespia.tw)",
  "maintainers": [
    "Abner Chou <hi@abnerchou.me> (https://abnerchou.me)"
  ],
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.7.2",
    "chokidar": "^4.0.3",
    "graceful-fs": "^4.2.10",
    "hexo-util": "^3.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^5.0.1",
    "@types/graceful-fs": "^4.1.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.10.2",
    "c8": "^10.1.3",
    "chai": "^5.2.1",
    "eslint": "^8.23.0",
    "eslint-config-hexo": "^5.0.0",
    "eslint-plugin-import": "^2.31.0",
    "mocha": "^11.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}
